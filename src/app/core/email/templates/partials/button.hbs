<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 20px 0;">
  <tr>
    <td align="left">
      <a href="{{url}}" style="
        background-color: hsl(240, 60%, 60%);
        color: {{textColor}};
        padding: 8px 22px;
        text-decoration: none;
        border-radius: 4px;
        display: inline-block;
        font-size: 14px;
        text-align: center;
        font-weight: 600;
      ">
        {{text}}
      </a>
    </td>
  </tr>
</table>
